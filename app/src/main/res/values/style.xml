<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button_base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">81dp</item>
        <item name="android:layout_height">81dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Button.grey" parent="Button_base">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="Button.orange" parent="Button_base">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Button.Dark.gray" parent="Button_base">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray.dark</item>
    </style>

    <style name="SecondActivity" parent="Button_base">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="splash_screen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>